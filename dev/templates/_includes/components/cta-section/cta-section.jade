mixin cta-block(data)
	each block in data.blocks
		.cta__block-wrap
			.cta__block(class='' + block.style ? block.style : null)
				.cta__block__content
					if block.icon
						.cta__block__icon
							+svg(block.icon)
					if block.img
						.cta__block__logo
							img(src="s/images/useful/#{block.img}", alt="img")
					.cta__block__title
						h3!= block.title
					if block.text
						p.cta__block__text!= block.text
					if block.rate
						.cta__block__rate-wrap
							.cta__block__rate
								each star in block.stars
									+svg(star.icon)
							span!= block.rate
				.cta__block__footer
					a.btn.btn_bordered.btn_mdh(href="javascript:void(0)")!= block.btn