mixin hero-component(data)
	.hero-component(style="background-image: url(s/images/useful/#{data.img}.jpg)" class='' + data.hero_class ? data.hero_class : null)
		.container
			.hero-component__inner
				.hero-component__text
					if data.subtitle
						p.hero-component__subtitle!= data.subtitle
					h1.hero-component__title!= data.title
					if data.secondary
						p.hero-component__secondary-text!= data.secondary
				if data.placeholder
					.hero-component__form
						form(action="javascript:void(0)")
							.form-control__wrap
								.input-wrap
									input.form-control.form-control_lg(type="text", required)
									span.form-control__placeholder!= data.placeholder
							button.btn.btn_shadowed.btn_md.btn_lgh(type="submit" class='' + data.button_class ? data.button_class : null)
								span!= data.submit_text