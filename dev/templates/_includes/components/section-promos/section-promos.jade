mixin section-promos(data)
	.section-promos
		.container
			.section-title__wrap
				h2.section-title Найдено 2 акции от 12 партнеров
			.section-promos__inner
				+promo-block({target: '#promo1', id: 'promo1'})
				+promo-block({target: '#promo2', id: 'promo2'})
				+promo-block({target: '#promo3', id: 'promo3'})
			.section-promos__link-wrap
				a.section-arrow__link(href="javascript:void(0)")
					span Перейти к тарифам провайдера
					+svg('icon-arrow')

mixin promo-block(data)
